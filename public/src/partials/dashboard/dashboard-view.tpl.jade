div.view-header
	i.icon-arrow-left-3.view-header-icon(ng-click="getBack()")
	span.subheader 任务板
	comment.text-muted.margin20 Dashboard
	div.view-header-control-button-set.place-right
		button.hint--bottom(
		data-hint="新建",
		popup-dialog,
		dialog-config="taskEditorConfig",
		ng-click="newTask($event, {})",
		on-confirm="confirmEmitted(action, data)"
		)
			a: i.icon-new
	div.view-header-control-search-box.place-right
		div.input-control.text
			input(type="text", placeholder="输入关键字搜索", ng-model="searchText")
			button.btn-search(tabindex="-1")

div#dashboard.grid.padding10
	div.row
		div.task-group.panel(ng-repeat="task_group in taskList track by task_group.seq")
			div.panel-header.text-center
				span.subheader {{task_group.title}}
				comment.text-muted.margin20 {{task_group.sub_title}}
			div.panel-content.nano
				div.nano-content
					div.panel.task-block(
					ng-repeat="task in task_group.task_list track by task.id",
					popup-dialog,
					dialog-config="taskEditorConfig",
					on-confirm="confirmEmitted(action, data)"
					ng-click="detail($event, task)")
						div.panel-header TK-{{task.id}}
							span.task-status.place-right.fg-darkRed {{translateStatus(task.status)}}
						div.panel-content
							label.text-ellipsis.text-info {{translateCustomer(task.customer)}}
							label {{task.topic}}