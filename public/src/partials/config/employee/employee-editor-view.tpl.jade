#employee-editor-form.modal-dialog.modal-lg(ng-controller="employeeEditorController")
	div.modal-content
		div.modal-header
			button.close(type="button", data-dismiss="modal") &times;
			h4.modal-title 详细信息 &nbsp;
				small Details
		div.modal-body
			div.form-horizontal
				h4 人员信息 &nbsp;
					small Employee Information
				hr

				div.form-group
					label.col-sm-2.control-label 姓名:
					div.col-sm-10
						input.form-control(type="text", placeholder="姓名", ng-model="dialog_data_model.name", required)
				div.form-group
					label.col-sm-2.control-label 职位:
					div.col-sm-10
						input.form-control(type="text", placeholder="职位", ng-model="dialog_data_model.role")
				div.form-group
					label.col-sm-2.control-label 电话:
					div.col-sm-10
						input.form-control(type="text", placeholder="电话", ng-model="dialog_data_model.tel")
				div.form-group
					label.col-sm-2.control-label 手机:
					div.col-sm-10
						input.form-control(type="text", placeholder="手机", ng-model="dialog_data_model.mobile")
				div.form-group
					label.col-sm-2.control-label 邮箱:
					div.col-sm-10
						input.form-control(type="text", placeholder="邮箱", ng-model="dialog_data_model.email")
				div.form-group
					label.col-sm-2.control-label 备注:
					div.col-sm-10
						textarea.form-control(rows="3", placeholder="备注", ng-model="dialog_data_model.description")

		div.modal-footer
			div.pull-left
				button.btn.btn-danger(ng-click="delete()", ng-if="prop.mode=='edit'") 删除
			div.pull-left.alert-danger.panel(ng-show="prop.showErrorMessage")
				i.fa.fa-fw.fa-warning
				span 单据填写有误，请修正红色标记
			button.btn.btn-default(type="button", ng-click="Cancel()") 取消
			button.btn.btn-primary(type="button", ng-click="Confirm('update', true)") 保存