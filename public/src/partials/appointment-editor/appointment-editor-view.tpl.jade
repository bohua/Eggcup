#appointment-editor-form.modal-dialog.modal-lg(ng-controller="appointmentEditorController")
	form#page0.modal-content.animate-show(ng-submit="Confirm('update', true)", ng-show="prop.paging==0")
		div.modal-header
			button.close(type="button", data-dismiss="modal") &times;
			h4.modal-title 面谈预约通知单 &nbsp;
				small  Details
		div.modal-body.container-fluid
			div.row
				div.form-group.col-sm-6
					label.control-label 公司名称:
					div
						input.form-control(type="text", placeholder="公司名称", ng-model="dialog_data_model.customer_name", disabled)
				div.form-group.col-sm-3
					label.control-label 联系人:
					div
						input.form-control(type="text", placeholder="联系人", ng-model="dialog_data_model.customer_contact", disabled)
				div.form-group.col-sm-3
					label.control-label 联系电话:
					div
						input.form-control(type="text", placeholder="联系电话", ng-model="dialog_data_model.customer_tel", disabled)
			div.row
				div.form-group.col-sm-6
					label.control-label 地址:
					div
						input.form-control(type="text", placeholder="地址", ng-model="dialog_data_model.customer_address", disabled)
				div.form-group.col-sm-6
					label.control-label 邮箱:
					div
						input.form-control(type="text", placeholder="邮箱", ng-model="dialog_data_model.customer_email", disabled)
			div.row
				div.form-group.col-sm-12
					label.control-label 咨询主题:
					div
						input.form-control(type="text", placeholder="咨询主题", ng-model="dialog_data_model.consult_topic", disabled)
			div.row
				div.form-group.col-sm-3
					label.control-label 面谈日期:
					div.input-group.date(date-field-model="dialog_data_model.appointment_date")
						span.input-group-addon
							i.fa.fa-calendar
						input.form-control.datepicker(type="text")
				div.form-group.col-sm-3
					label.control-label 面谈时间:
					div.input-group.bootstrap-timepicker
						span.input-group-addon
							i.fa.fa-clock-o
						input.form-control.datepicker(type="text", time-field-model="dialog_data_model.appointment_date")
			div.row
				div.form-group.col-sm-12
					label.control-label 面谈地址:
					div
						input.form-control(type="text", placeholder="面谈地址", ng-model="dialog_data_model.appointment_address", required)

			div.row
				div.form-group.col-sm-12
					label.control-label 面谈事项:
					div
						textarea.form-control(rows="5", placeholder="面谈事项", ng-model="dialog_data_model.appointment_desc")

		div.modal-footer
			button.btn.btn-success(type="button", ng-click="Generate()") 预览
			button.btn.btn-primary(type="submit") 保存
			button.btn.btn-default(type="button", ng-click="Cancel()") 取消

	div#page1.modal-content.animate-show(ng-show="prop.paging==1")
		include appointment-perview-view.tpl.jade
