#arrange-editor-form.modal-dialog.modal-lg(ng-controller="arrangeEditorController")
	form.modal-content(ng-submit="Confirm('update', true)")
		div.modal-header
			button.close(type="button", data-dismiss="modal", ng-if="prop.mode=='edit'") &times;
			h4.modal-title 审核详情 &nbsp;
				small  Details
		div.modal-body.container-fluid
			div.row
				div.form-group.col-sm-3
					label.control-label 审批日期:
					div.input-group.date(date-field-model="dialog_data_model.arrangement_date", required)
						span.input-group-addon
							i.fa.fa-calendar
						input.form-control.datepicker(type="text")

				div.form-group.col-sm-3
					label.control-label 审批人:
					div
						input.form-control(type="text", placeholder="审批人", ng-model="dialog_data_model.arrangement_assigner", auto-complete-field="employeeFieldOptions", required)

				div.form-group.col-sm-3
					label.control-label 时间安排自:
					div.input-group.date(date-field-model="dialog_data_model.start_date")
						span.input-group-addon
							i.fa.fa-calendar
						input.form-control.datepicker(type="text")

				div.form-group.col-sm-3
					label.control-label 至:
					div.input-group.date(date-field-model="dialog_data_model.end_date")
						span.input-group-addon
							i.fa.fa-calendar
						input.form-control.datepicker(type="text")

			div.row
				div.form-group.col-sm-12
					label.control-label 人员安排:
					div
						input.form-control(type="text", placeholder="人员安排", ng-model="dialog_data_model.arrangement_assignee", token-field="assigneeFieldOptions")

			div.row
				div.form-group.col-sm-12
					label.control-label 审批意见:
					div
						textarea.form-control(rows="5", placeholder="审批意见", ng-model="dialog_data_model.arrangement_comment")


		div.modal-footer
			button.btn.btn-primary(type="submit") 保存
			button.btn.btn-default(type="button", ng-click="Cancel()", ng-if="prop.mode=='edit'") 取消

			div.pull-left
				button.btn.btn-danger(ng-if="prop.mode=='edit'", pop-confirm="emptyBtnOptions") 清空