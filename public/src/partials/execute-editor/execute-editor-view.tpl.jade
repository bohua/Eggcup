#execute-editor-form.modal-dialog.modal-lg(ng-controller="executeEditorController")
	form.modal-content(ng-submit="Confirm('update', true)")
		div.modal-header
			button.close(type="button", data-dismiss="modal") &times;
			h4.modal-title 执行详情 &nbsp;
				small Executing Details
		div.modal-body.container-fluid
			h4 项目信息 &nbsp;
				small Project Information
			hr
			div.row
				div.form-group.col-sm-4
					label.control-label 项目付责人:
					div
						input.form-control(type="text", placeholder="项目付责人", ng-model="dialog_data_model.project_manager", auto-complete-field="employeeFieldOptions")
				div.form-group.col-sm-4
					label.control-label 项目执行人:
					div
						input.form-control(type="text", placeholder="项目执行人", ng-model="dialog_data_model.project_runner", auto-complete-field="employeeFieldOptions")

			div.row
				div.form-group.col-sm-12
					label.control-label 项目名称:
					div
						input.form-control(type="text", placeholder="项目名称", ng-model="dialog_data_model.project_topic")

			h4.cursor-pointer(data-toggle="collapse", data-target="#execute-editor-privilege")
				i.fa.fa-fw.fa-angle-down
				span 阅读权限  &nbsp;
					small Privileges
			hr
			#execute-editor-privilege.collapse.in
				div.row
					div.col-sm-12
						div.form-group
							div.btn-group(data-toggle="buttons")
								label.btn.btn-default(toggle-button-model="dialog_data_model.prop_internal")
									input(type="checkbox")
									span 内部浏览
								label.btn.btn-default(toggle-button-model="dialog_data_model.prop_external")
									input(type="checkbox")
									span 客户浏览

		div.modal-footer
			button.btn.btn-primary(type="submit") 保存
			button.btn.btn-default(type="button", ng-click="Cancel()") 取消

			div.pull-left
				button.btn.btn-danger(ng-if="prop.mode=='edit'", pop-confirm="emptyBtnOptions") 清空
			div.pull-left.alert-danger.panel(ng-show="prop.showErrorMessage")
				i.fa.fa-fw.fa-warning
				span 单据填写有误，请修正红色标记