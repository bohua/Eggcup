div.page-header
	h2
		i.fa.fa-suitcase.fa-fw &nbsp;
		span 汇总 &nbsp;
		small.hidden-xs Summary
		div.btn-group.pull-right
			button.btn.btn-default
				i.fa.fa-edit.fa-fw &nbsp;
				span 修改

#summary-panel-group.panel-group
	div.panel.panel-default
		div.panel-heading.cursor-pointer
			h4.no-margin(data-toggle="collapse", href="#summary-report-panel") 汇总报告 &nbsp;
				small.hidden-xs Summary Report
		#summary-report-panel.panel-collapse.collapse.in
			div.flex-container.panel-body
				div.flex-box
					label 汇报人:
					span {{task_model.summarySheet.summary_person}}
				div.flex-box
					label 结案日期:
					span {{task_model.summarySheet.summary_date | date:'yyyy-MM-dd'}}
				div.flex-box
					label 结案总结:
					span {{task_model.summarySheet.summary_content}}